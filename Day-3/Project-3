JavaScript Code:
//global variable
const tasks = [];
let msg = "Tasks:";

//function to add task and callback
const addTask = (task, callback) => {
  tasks.push(task);
  callback();
};

//callback function to print all tasks
const printTasks = () => {
  const taskList = document.getElementById('taskList');
  taskList.innerHTML = '';

  const header = document.createElement('h3');
  header.textContent = msg;
  taskList.appendChild(header);

  tasks.forEach(task => {
    const taskItem = document.createElement('div');
    taskItem.className = 'task-item';
    taskItem.textContent = task;
    taskList.appendChild(taskItem);
  });

  const countMessage = `Total tasks: ${tasks.length}`;
  console.log(countMessage);
};

//function using arbitrary arugument to add multiple tasks
const addMultipleTasks = (...newTasks) => {
  newTasks.forEach(task => tasks.push(task));
  printTasks();
};

//eventlistener to add task on button click
document.getElementById('addSingleTask').addEventListener('click', () => {
  const input = document.getElementById('taskInput');
  const task = input.value.trim();
  if (task) {
    addTask(task, printTasks);
    input.value = '';
  }
});



  margin-bottom: 5px;
}
